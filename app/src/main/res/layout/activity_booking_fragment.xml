<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_upper">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_jam">

                <TextView
                    android:id="@+id/txt_jammulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06.00"
                    android:textStyle="bold"
                    android:textSize="24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="27dp"
                    android:id="@+id/card_jam_akhir">

                    <TextView
                        android:id="@+id/txt_line_sambung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- "
                        android:textSize="18dp"/>

                    <TextView
                        android:id="@+id/txt_jamakhir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.00"
                        android:textSize="18dp"
                        android:paddingTop="5dp"
                        android:layout_toLeftOf="@id/txt_line_sambung"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_jam"
                android:layout_marginLeft="15dp"
                android:id="@+id/line_side_jam">
                <View
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:background="@android:color/darker_gray"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line_side_jam"
                android:layout_marginLeft="15dp"
                android:id="@+id/txt_jamk">

                <TextView
                    android:id="@+id/txt_organisasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KISI ITS"
                    android:textStyle="bold"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/txt_namalengkap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hasan Khadiki"
                    android:textSize="18dp"
                    android:layout_below="@id/txt_organisasi"/>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_upper">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/line_bellow_jam"
                android:layout_marginTop="7dp"/>

            <TextView
                android:gravity="center"
                android:id="@+id/txt_kegiatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Welcome party staff KISI 2017/2018"
                android:paddingTop="15dp"
                android:textSize="16dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
